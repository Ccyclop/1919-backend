pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '--privileged' // Necessary for Docker-in-Docker
        }
    }
    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Ccyclop/1919-backend.git', branch: 'main'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install' // Assuming you have a Dockerfile that installs dependencies
            }
        }
        stage('Build Application') {
            steps {
                script {
                    sh 'docker build -t 1919-back .' // Build the Docker image for your application
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t 1919-back:latest .' // Optional second build step
                }
            }
        }
    }
    post {
        success {
            echo 'Build and Docker image creation successful!'
        }
        failure {
            echo 'Build or Docker image creation failed.'
        }
    }
}
