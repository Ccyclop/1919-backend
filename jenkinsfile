pipeline {
    agent {
        docker {
            image 'alpine/socat'
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock' // Use root user
        }
    }
    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Ccyclop/1919-backend.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install Node.js and npm
                    sh '''
                        apk add --no-cache nodejs npm
                        npm install
                    '''
                }
            }
        }

        stage('Build Application') {
            steps {
                script {
                    sh 'docker build -t 1919-back .' // Build the Docker image for your application
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t 1919-back:latest .' // Optional second build step
                }
            }
        }
    }

    post {
        success {
            echo 'Build and Docker image creation successful!'
        }
        failure {
            echo 'Build or Docker image creation failed.'
        }
    }
}
