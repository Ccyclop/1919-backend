pipeline {
    agent { 
        docker {
            image 'alpine/socat:latest'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                echo "Cloning the repository..."
                git 'https://github.com/Ccyclop/1919-backend.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
                // Navigate into the project directory before installing dependencies
                dir('1919-BACKEND') {
                    sh 'npm install'  // Replace with the appropriate package manager command if needed
                }
            }
        }
        stage('Build Project') {
            steps {
                echo "Building the project..."
                // Navigate into the project directory before building
                dir('1919-BACKEND') {
                    sh 'npm run build'  // Adjust this command based on your build setup
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                echo "Building the Docker image..."
                // Ensure you are in the correct directory for Docker build
                dir('1919-BACKEND') {
                    sh 'docker build -t your-image-name .'  // Replace 'your-image-name' with your desired image name
                }
            }
        }
    }
}
