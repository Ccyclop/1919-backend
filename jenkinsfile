pipeline {
    agent any 

    stages {
        stage('Install Dependencies') {
            steps {
                sh '''
                cd 1919-BACKEND
                npm install
                '''
            }
        }
        stage('Build Project') {
            steps {
                sh '''
                cd 1919-BACKEND
                npm run build
                '''
            }
        }
        stage('Build Docker Image') {
            steps {
                sh '''
                cd 1919-BACKEND
                docker build -t 1919-backend .
                '''
            }
        }
    }
}
